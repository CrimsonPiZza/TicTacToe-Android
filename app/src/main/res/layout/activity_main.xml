<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:gravity="center_vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableRow android:layout_width="match_parent" android:gravity="center_horizontal">
        <TextView
            android:id="@+id/result"
        />
    </TableRow>

    <TableRow android:gravity="center_horizontal" android:layout_width="match_parent">
        <Button
                android:id="@+id/b1"
                android:textSize="20dp"
                android:onClick="tick"
            />
        <Button
                android:id="@+id/b2"
                android:textSize="20dp"
                android:onClick="tick"
        />
        <Button
                android:id="@+id/b3"
                android:textSize="20dp"
                android:onClick="tick"
        />
    </TableRow>
    <TableRow android:gravity="center_horizontal" android:layout_width="match_parent">
        <Button
                android:id="@+id/b4"
                android:textSize="20dp"
                android:onClick="tick"
        />
        <Button
                android:id="@+id/b5"
                android:textSize="20dp"
                android:onClick="tick"
        />
        <Button
                android:id="@+id/b6"
                android:textSize="20dp"
                android:onClick="tick"
        />
    </TableRow>
    <TableRow android:gravity="center_horizontal" android:layout_width="match_parent">
        <Button
                android:id="@+id/b7"
                android:textSize="20dp"
                android:onClick="tick"
        />
        <Button
                android:id="@+id/b8"
                android:textSize="20dp"
                android:onClick="tick"
        />
        <Button
                android:id="@+id/b9"
                android:textSize="20dp"
                android:onClick="tick"
        />
    </TableRow>
</TableLayout>